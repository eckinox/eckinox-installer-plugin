{
    "name": "eckinox/installer-plugin",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "A simple Composer plugin to install metapackages with extra files and configurations.",
    "autoload": {
        "psr-4": {
            "Eckinox\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "Eckinox\\Composer\\Plugin"
    },
    "scripts": {
        "test": "phpunit"
    },
    "require": {
        "composer-plugin-api": "~1 || ~2"
    },
    "require-dev": {
        "composer/composer": "^1.3",
        "phpunit/phpunit": "^9.5"
    }
}
